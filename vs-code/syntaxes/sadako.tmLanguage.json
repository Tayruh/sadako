{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.sadako",
  "name": "Sadako",
  "patterns": [
    {
      "name": "keyword.operator.sadako",
      "match": "(?<=\\[:\\s*)((#(\\s*=)?|%(\\s*=)?|&|=|>|>>)|(\\+(\\s*([#%](\\s*=)?|[&=>]))?)|(\\*(\\s*([#%](\\s*=)?|[!&=]))?))"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "(?<=^\\s*(-\\s*)*)<>|<>(?=\\s*($|\\n))"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "(?<=^|\\n|;;)[~\\s]*(?=if|else if|else|for|while)"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "(?<=(^|\\n|;;)\\s*)(((-\\s*)*(<<|>>(\\s*=)?(\\s*[#%])?))|(=\\s*)+|(\\+\\s*)+|(\\*(?![.:])\\s*)+|(-\\s*)+)"
    },
    {
      "name": "support.class.sadako",
      "match": "(?<=##[\\t ]*).*?(?=~:|\\n|$)"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "~:"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "\\\\(?=\\s*(\\n|$))|(^|\\n|;;)\\s*\\\\"
    },
    {
      "name": "keyword.operator.sadako",
      "match": "(;;|::|@:(\\s*=)?|##|~~\\+|~~=|{{|}})+"
    },
    {
      "name": "keyword.control.sadako",
      "match": "(?<=(^|\\n|;;)\\s*(~\\s*)+)(if|else if|else|for|while)"
    },
    {
      "name": "support.constant.sadako",
      "match": "(?<=(^|\\n|;;)\\s*<<\\s*)(END|CONTINUE|BREAK|ABORT|RETURN)"
    },
    {
      "name": "storage.type.sadako",
      "match": "(\\[:)|(:\\])|(\\(:)|(:\\))|(\\{:)|(:\\})|(\\<:)|(:\\>)"
    },
    {
      "name": "support.function.sadako",
      "match": "(?<=(^|;;|\\n)\\s*(((\\+\\s*)+|(\\*\\s*)+|(-\\s*)+)|\\s*)){.*(?<!:)}"
    },
    {
      "name": "support.function.sadako",
      "match": "(?<=(^|;;|\\n)\\s*(=\\s*)+)[^=\\s].*"
    },
    {
      "name": "storage.type.sadako",
      "match": "(?<=(^|;;|\\n)\\s*((\\+|\\*)\\s*)+.*)(\\[|\\]|<<|>>)"
    },
    {
      "name": "comment.line.double-slash.sadako",
      "match": "\\/\\/.*"
    },
    {
      "name": "comment.block.sadako",
      "begin": "\\/\\*",
      "end": "\\*\\/"
    },
    {
      "name": "string.interpolated.sadako",
      "match": "(([\\$_%#^*]\\.)|([%#^*]\\:))([a-zA-Z0-9]+(?:[\\._]?[a-zA-Z0-9]+)*)"
    },
    {
      "name": "string.interpolated.sadako",
      "match": "([\\$_]:([a-zA-Z0-9]+(\\_[a-zA-Z0-9]+)*(([\\.][a-zA-Z0-9]+(\\_[a-zA-Z0-9]+)*)|([\\[\\(]+([^\\[\\]\\(\\)\\s]*\\ *)*[\\)\\]]+))*))"
    }
  ]
}
